<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">


    <ImageView
        android:id="@+id/vistaPedidoImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/noimage" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/vistaPedidoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Producto" />

        <TextView
            android:id="@+id/vistaPedidoCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CategorÃ­a" />

        <TextView
            android:id="@+id/vistaPedidoPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio" />
    </LinearLayout>

    <TextView
        android:id="@+id/vistaPedidoQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad: 1" />
</LinearLayout>
